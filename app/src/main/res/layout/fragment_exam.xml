<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExamFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/question"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="text"
            android:textSize="30dp"
            android:textColor="#dd3e29"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.231" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/question"
            app:layout_constraintVertical_bias="0.144">

            <RadioButton
                android:id="@+id/sky_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sky Letter" />

            <RadioButton
                android:id="@+id/grass_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grass Letter" />

            <RadioButton
                android:id="@+id/root_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Root Letter" />
        </RadioGroup>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/end_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup"
            android:text="End"
            android:textColor="#ffff"
            android:background="#dd3e29"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>